{
  "name": "Push person to the campaign",
  "description": "Push person to the selected campaign.",
  "documentation": "http://support.replyapp.io/article/51-actions",
  "fields": [
    {
      "label": "Campaign Id",
      "properties": {
        "parameter": "domain",
        "fieldType": "text",
        "helptext": "Provide the id of the campaign that the contact will be added to."
      },
      "readonly": false,
      "required": true,
      "visible": true
    },
    {
      "label": "Email",
      "properties": {
        "parameter": "email",
        "fieldType": "email",
        "helptext": "Provide the email address of the person you want to add to the campaign."
      },
      "readonly": false,
      "required": true,
      "visible": true
    }
  ],
  "headers": {
    "Authorization": "Basic {base64_encode_username_password(auth.field.apiAccessKey:)}",
    "Content-Type": "application/json"
  },
  "method": "POST",
  "endpoint": "/actions/pushtocampaign",
  "request": {
    "prospects":
      {
        "campaignId":"{field.domain}",
        "email":"{field.email}"
      }
  },
  "response": {
    "success": {},
    "error": {}
  }
}
