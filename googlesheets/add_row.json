{
    "name": "Add a row",
    "description": "Add a row to a spreadsheet using Google Sheets.",
    "documentation": "https://developers.google.com/google-apps/spreadsheets/#adding_a_list_row",
    "fields": [
        {
            "label": "Spreadsheet Id",
            "properties": {
                "parameters": "spreadsheetId",
                "fieldType": "text"
            },
            "readonly": false,
            "required": true,
            "visible": true
        },
        {
            "label": "Worksheet Id",
            "properties": {
                "parameters": "worksheetId",
                "fieldType": "text"
            },
            "readonly": false,
            "required": true,
            "visible": true
        },
        {
            "label": "Payload",
            "properties": {
                "parameters": "xmlpayload",
                "fieldType": "textarea",
                "default": "{\n  \"gsx:fruit\": \"Orange\",\n  \"gsx:color\": \"Orange\",\n  \"gsx:size\": \"Medium\"\n}",
                "helptext": "List of your columns with values (in XML)"
            },
            "readonly": false,
            "required": true,
            "visible": true
        }
    ],
    "method": "POST",
    "endpoint": "/list/{field.spreadsheetId}/{field.worksheetId}/private/full",
    "request": "<entry xmlns=\"http://www.w3.org/2005/Atom\" xmlns:gsx=\"http://schemas.google.com/spreadsheets/2006/extended\">{json_to_xml(field.xmlpayload)}</entry>",
    "response": {
        "success": {},
        "error": {}
    }
}
