{
    "name": "Add a row",
    "description": "Add a row to a spreadsheet using Google Sheets.",
    "documentation": "https://developers.google.com/google-apps/spreadsheets/#adding_a_list_row",
    "fields": [
        {
            "label": "Spreadsheet Id",
            "properties": {
                "parameter": "spreadsheetId",
                "fieldType": "text",
                "helptext": "E.g. if your spreadsheet's web address is 'https://docs.google.com/spreadsheets/d/<strong>1j3fc9BNW1yQIJ758izRH3fOyLgFndLjoIEUD-rjPsxwe</strong>/edit#gid=0' then your Spreadsheet Id you need to enter here is <strong>1j3fc9BNW1yQIJ758izRH3fOyLgFndLjoIEUD-rjPsxwe</strong>."
            },
            "readonly": false,
            "required": true,
            "visible": true
        },
        {
            "label": "Worksheet Id",
            "properties": {
                "parameter": "worksheetId",
                "fieldType": "text",
                "default": "1",
                "helptext": "The number of your worksheet as it appears in your spreadsheet. '1' is the first one on the left."
            },
            "readonly": false,
            "required": true,
            "visible": true
        },
        {
            "label": "Payload",
            "properties": {
                "parameter": "xmlpayload",
                "fieldType": "textarea",
                "default": "{\n  \"gsx:firstname\": {\"$t\": \"John\"},\n  \"gsx:lastname\": {\"$t\": \"Smith\"},\n  \"gsx:email\": {\"$t\": \"jsmith@gmail.com\"}\n}",
                "helptext": "List of your columns with values. The text after 'gsx:' is the label of your column in your spreadsheet. Note that your spreadsheet needs headings for this integration to work."
            },
            "readonly": false,
            "required": true,
            "visible": true
        }
    ],
    "method": "POST",
    "endpoint": "/list/{field.spreadsheetId}/{field.worksheetId}/private/full",
    "request": "<entry xmlns=\"http://www.w3.org/2005/Atom\" xmlns:gsx=\"http://schemas.google.com/spreadsheets/2006/extended\">{json_to_xml(field.xmlpayload)}</entry>",
    "headers": {
      "Content-Type": "application/atom+xml",
      "Authorization": "Bearer {auth.oauth2Token}"
    },
    "response": {
        "success": {},
        "error": {}
    }
}
