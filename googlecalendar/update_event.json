{
  "name": "Update an event",
  "description": "Update a specific event in Google Calendar.",
  "documentation": "https://developers.google.com/google-apps/calendar/v3/reference/events/update",
  "fields": [
    {
      "label": "Calendar Id",
      "properties": {
          "parameter": "calendarId",
          "fieldType": "text",
          "helptext": "Enter the ID of the calendar where the event is listed."
      },
      "readonly": false,
      "required": true,
      "visible": true
    },
    {
      "label": "Event Id",
      "properties": {
          "parameter": "eventId",
          "fieldType": "text",
          "helptext": "Enter the ID of the event you want to update."
      },
      "readonly": false,
      "required": true,
      "visible": true
    },
    {
      "label": "Always include email?",
      "properties": {
        "parameter": "alwaysIncludeEmail",
        "fieldType": "radio",
        "choices": [
            {"key": "true", "value": "Yes"},
            {"key": "false", "value": "No"}
        ],
        "default": "false",
        "classes": "inline",
        "helptext": "Whether to always include a value in the email field for the organizer, creator and attendees, even if no real email is available (i.e. a generated, non-working value will be provided)."
      },
      "readonly": false,
      "required": false,
      "visible": true
    },
    {
      "label": "Maximum attendees",
      "properties": {
          "parameter": "maxAttendees",
          "fieldType": "number",
          "helptext": "The maximum number of attendees to include in the response."
      },
      "readonly": false,
      "required": false,
      "visible": true
    },
    {
      "label": "Send notifications?",
      "properties": {
        "parameter": "sendNotifications",
        "fieldType": "radio",
        "choices": [
            {"key": "true", "value": "Yes"},
            {"key": "false", "value": "No"}
        ],
        "default": "false",
        "classes": "inline",
        "helptext": "Should notifications of the update of the event be sent?"
      },
      "readonly": false,
      "required": false,
      "visible": true
    },
    {
      "label": "Support attachments?",
      "properties": {
        "parameter": "supportsAttachments",
        "fieldType": "radio",
        "choices": [
            {"key": "true", "value": "Yes"},
            {"key": "false", "value": "No"}
        ],
        "default": "false",
        "classes": "inline",
        "helptext": "Whether API client performing operation supports event attachments."
      },
      "readonly": false,
      "required": false,
      "visible": true
    }
  ],
  "headers": {
    "Authorization": "Bearer {auth.oauth2Token}"
  },
  "method": "PUT",
  "endpoint": "/calendars/{field.calendarId}/events/{field.eventId}",
  "request": {
    "alwaysIncludeEmail": "{string_to_boolean(field.alwaysIncludeEmail)}",
    "maxAttendees": "{string_to_int(field.maxAttendees)}",
    "sendNotifications": "{string_to_boolean(field.sendNotifications)}",
    "supportsAttachments": "{string_to_boolean(field.supportsAttachments)}"
  },
  "response": {
      "success": {},
      "error": {}
  }
}
