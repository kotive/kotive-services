{
  "name": "Insert an event",
  "description": "Insert a detailed new event in Google Calendar.",
  "documentation": "https://developers.google.com/google-apps/calendar/v3/reference/events/insert",
  "fields": [
    {
      "label": "Calendar Id",
      "properties": {
          "parameter": "calendarId",
          "fieldType": "text",
          "helptext": "Enter the ID of the calendar where the event is to be inserted."
      },
      "readonly": false,
      "required": true,
      "visible": true
    },
    {
      "label": "Maximum attendees",
      "properties": {
          "parameter": "maxAttendees",
          "fieldType": "number",
          "helptext": "The maximum number of attendees to include in the response.",
          "default": "1"
      },
      "readonly": false,
      "required": true,
      "visible": true
    },
    {
      "label": "Send notifications?",
      "properties": {
        "parameter": "sendNotifications",
        "fieldType": "radio",
        "choices": [
            {"key": "true", "value": "Yes"},
            {"key": "false", "value": "No"}
        ],
        "default": "false",
        "classes": "inline",
        "helptext": "Whether to send notifications about the creation of the new event."
      },
      "readonly": false,
      "required": true,
      "visible": true
    }
  ],
  "headers": {
    "Authorization": "Bearer {auth.oauth2Token}"
  },
  "method": "POST",
  "endpoint": "/calendars/{field.calendarId}/events?maxAttendees={string_to_int(field.maxAttendees)}&sendNotifications={string_to_boolean(field.sendNotifications)}",
  "request": {
    "summary": "{field.summary}",
    "location": "{field.location}",
    "description": "{field.description}",
    "start": {
      "dateTime": "2015-05-28T09:00:00-07:00",
      "timeZone": "America/Los_Angeles",
    },
    "end": {
      "dateTime": "2015-05-28T17:00:00-07:00",
      "timeZone": "America/Los_Angeles",
    },
    "recurrence": [
      "RRULE:FREQ=DAILY;COUNT=2"
    ],
    "attendees": "{comma_to_hash_array(field.attendees, email)}",
    "reminders": {
      "useDefault": true
    },
  },
  "response": {
      "success": {},
      "error": {}
  }
}
