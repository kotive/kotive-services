{
    "name": "Send an SMS",
    "description": "Reach any customer on any mobile phone, anywhere.",
    "documentation": "https://www.clickatell.com/developers/api-docs/send-message-rest/",
    "fields": [
        {
            "label": "To",
            "properties": {
                "parameter": "to",
                "fieldType": "text",
                "helptext": "Start with the country code (not zero), no spaces or other non-numeric characters. Comma separated list of mobile numbers."
            },
            "readonly": false,
            "required": true,
            "visible": true
        },
        {
            "label": "Message",
            "properties": {
                "parameter": "message",
                "fieldType": "textarea",
                "helptext": "Limit your number of characters to less than 160 to keep it to a single message."
            },
            "readonly": false,
            "required": true,
            "visible": true
        }
    ],
    "headers": {
        "Authorization": "Bearer {auth.field.authtoken}",
        "X-Version: ": "1",
        "Content-Type": "application/json",
        "Accept": "application/json"
    },
    "method": "POST",
    "endpoint": "/message",
    "request": {
        "text":"{field.message}",
        "to": "{comma_to_array(field.to)}"
    },
    "response": {
        "success": {},
        "error": {}
    }
}
