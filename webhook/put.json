    "documentation": "",
    "fields": [
        {
            "label": "url",
            "properties": {
                "fieldType": "web",
                "help-text": "Any URL with a querystring will be re-encoded properly."
            },
            "readonly": false,
            "required": true,
            "visible": true
        },
        {
            "label": "payload_type",
            "properties": {
                "fieldType": "radio",
                "choices": [
                    "form",
                    "json",
                    "xml",
                    "raw"
