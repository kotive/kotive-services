{
    "name": "Update a comment",
    "description": "Update an existing comment.",
    "documentation": "https://github.com/basecamp/bc3-api/blob/master/sections/comments.md#update-a-comment",
    "fields": [
        {
            "label": "Basecamp id",
            "properties": {
                "parameter": "bucketId",
                "fieldType": "number",
                "helptext": "The ID of the Basecamp where the comment resides."
            },
            "readonly": false,
            "required": true,
            "visible": true
        },
        {
            "label": "Comment id",
            "properties": {
                "parameter": "commentId",
                "fieldType": "number",
                "helptext": "The ID of the comment you want to update."
            },
            "readonly": false,
            "required": true,
            "visible": true
        },
        {
          "label": "Comment",
          "properties": {
            "parameter": "content",
            "fieldType": "textarea",
            "helptext": "Get info on <a href='hhttps://github.com/basecamp/bc3-api/blob/master/README.md#rich-text-content' target='_blank'>how to style</a> your comment."
          },
          "readonly": false,
          "required": true,
          "visible": true
        }
    ],
    "headers": {
      "Authorization": "Bearer {auth.oauth2Token}"
    },
    "method": "PUT",
    "endpoint": "/{auth.field.accountId}/buckets/{field.bucketId}/comments/{field.commentId}.json",
    "request": {
        "content": "{field.content}"
    },
    "response": {
        "success": "",
        "error": {}
    }
}
