{
    "name": "Track an event",
    "description": "Track an event using MixPanel.",
    "documentation": "https://mixpanel.com/help/reference/http#tracking-events",
    "fields": [
        {
            "label": "Event",
            "properties": {
                "parameter": "event",
                "fieldType": "text"
            },
            "readonly": false,
            "required": true,
            "visible": true
        },
        {
            "label": "Distinct id",
            "properties": {
                "parameter": "distinct_id",
                "fieldType": "text"
            },
            "readonly": false,
            "required": false,
            "visible": true
        }
    ],
    "method": "POST",
    "endpoint": "/track/",
    "request": {
        "event": "{field.event}",
        "properties": {
            "token": "{settings.mixpanel.token}",
            "distinct_id": "{field.distinct_id}"
        }
    },
    "response": {
        "success": {},
        "error": {}
    }
}
