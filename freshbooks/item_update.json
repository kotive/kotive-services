{
    "name": "Update an item",
    "description": "Update an existing item. Items are stored from invoice lines to make invoicing easier in the future.",
    "documentation": "https://www.freshbooks.com/api/items",
    "fields": [
        {
            "label": "Item id",
            "properties": {
                "parameter": "itemId",
                "fieldType": "number",
                "helptext": "The ID of the item you want to retrieve."
            },
            "readonly": false,
            "required": true,
            "visible": true
        },
        {
            "label": "Accounting system id",
            "properties": {
                "parameter": "accountingSystemId",
                "fieldType": "text",
                "helptext": "The unique identifier of business client exists on."
            },
            "readonly": false,
            "required": true,
            "visible": true
        },
        {
            "label": "Item name",
            "properties": {
                "parameter": "itemName",
                "fieldType": "text",
                "helptext": "Descriptive name of the item."
            },
            "readonly": false,
            "required": false,
            "visible": true
        },
        {
            "label": "Description",
            "properties": {
                "parameter": "description",
                "fieldType": "text",
                "helptext": "Descriptive text for item."
            },
            "readonly": false,
            "required": false,
            "visible": true
        },
        {
            "label": "Quantity",
            "properties": {
                "parameter": "quantity",
                "fieldType": "text",
                "helptext": "Number to multiply unit cost by."
            },
            "readonly": false,
            "required": false,
            "visible": true
        },
        {
            "label": "Inventory",
            "properties": {
                "parameter": "inventory",
                "fieldType": "text",
                "helptext": "Count of inventory."
            },
            "readonly": false,
            "required": false,
            "visible": true
        },
        {
            "label": "Amount",
            "properties": {
                "parameter": "amount",
                "fieldType": "text",
                "helptext": "Amount paid on invoice, to two decimal places."
            },
            "readonly": false,
            "required": false,
            "visible": true
        },
        {
            "label": "Currency code",
            "properties": {
                "parameter": "currencyCode",
                "fieldType": "text",
                "helptext": "Three-letter currency code."
            },
            "readonly": false,
            "required": false,
            "visible": true
        },
        {
            "label": "Tax 1",
            "properties": {
                "parameter": "tax1",
                "fieldType": "number",
                "helptext": "ID of tax on invoice."
            },
            "readonly": false,
            "required": false,
            "visible": true
        },
        {
            "label": "Tax 2",
            "properties": {
                "parameter": "tax2",
                "fieldType": "number",
                "helptext": "ID of second tax on invoice if applicable."
            },
            "readonly": false,
            "required": false,
            "visible": true
        },
        {
            "label": "Visible state",
            "properties": {
                "parameter": "visState",
                "fieldType": "radio",
                "choices": [
                  {"key": 0, "value": "Active"},
                  {"key": 1, "value": "Deleted"}
                ],
                "default": 0,
                "classes": "inline"
            },
            "readonly": false,
            "required": true,
            "visible": true
        }
    ],
    "headers": {
      "Authorization": "Bearer {auth.oauth2Token}"
    },
    "method": "PUT",
    "endpoint": "/accounting/account/{auth.field.apikey}/items/items/{field.itemId}",
    "request": {
        "item": {
            "accounting_systemid": "{field.accountingSystemId}",
            "name": "{field.itemName}",
            "description": "{field.description}",
            "qty": "{field.quantity}",
            "inventory": "{string_or_null(field.inventory)}",
            "unit_cost": {
                "amount": "{field.amount}",
                "code": "{field.currencyCode}"
            },
            "tax1": "{field.tax1}",
            "tax2": "{field.tax2}",
            "vis_state": "{field.visState}"
        }
    },
    "response": {
        "success": "",
        "error": {}
    }
}
