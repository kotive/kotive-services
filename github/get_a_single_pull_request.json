{
  "name": "Get a single pull request",
  "description": "Get a single pull request in Github.",
  "documentation": "https://developer.github.com/v3/pulls/#get-a-single-pull-request",
  "fields": [
    {
      "label": "Owner username",
      "properties": {
        "parameter": "owner",
        "fieldType": "text",
        "helptext": "The owner of the repository which you want to see the pull request for."
      },
      "readonly": false,
      "required": true,
      "visible": true
    },
    {
      "label": "Repository",
      "properties": {
        "parameter": "repository",
        "fieldType": "text",
        "helptext": "Enter the repository with the pull request you want to see."
      },
      "readonly": false,
      "required": true,
      "visible": true
    },
    {
      "label": "Pull request number",
      "properties": {
        "parameter": "pullNumber",
        "fieldType": "text",
        "helptext": "Enter the number for the pull request you want to see."
      },
      "readonly": false,
      "required": true,
      "visible": true
    }
  ],
  "headers": {
    "Authorization": "Bearer {auth.oauth2Token}"
  },
  "method": "GET",
  "endpoint": "/repos/{field.owner}/{field.repo}/pulls/{field.pullNumber}",
  "request": {},
  "response": {
    "success": "",
    "error": ""
  }
}