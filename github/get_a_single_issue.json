{
  "name": "Get a single issue",
  "description": "Get a single issue in a repository.",
  "documentation": "https://developer.github.com/v3/issues/#get-a-single-issue",
  "fields": [
    {
      "label": "Owner username",
      "properties": {
        "parameter": "owner",
        "fieldType": "text",
        "helptext": "The owner of the repository that you want to see the issue for."
      },
      "readonly": false,
      "required": true,
      "visible": true
    },
    {
      "label": "Repository",
      "properties": {
        "parameter": "repository",
        "fieldType": "text",
        "helptext": "Enter the repository with the issue."
      },
      "readonly": false,
      "required": true,
      "visible": true
    },
    {
      "label": "Issue number",
      "properties": {
        "parameter": "issueNumber",
        "fieldType": "text",
        "helptext": "The issue number to query."
      },
      "readonly": false,
      "required": true,
      "visible": true
    }
  ],
  "headers": {
    "Authorization": "Bearer {auth.oauth2Token}"
  },
  "method": "GET",
  "endpoint": "/repos/{field.owner}/{field.repo}/issues/{field.issueNumber}",
  "request": {},
  "response": {
    "success": "",
    "error": ""
  }
}