{
  "name": "Send a message to Slack",
  "description": "Send a message to either a Slack channel or a user",
  "documentation": "https://api.slack.com/incoming-webhooks",
  "fields": [
    {
      "label": "Your message to send to Slack",
      "properties": {
        "parameter": "message",
        "fieldType": "textarea",
        "helptext": "For advanced formatting, see <a href='https://api.slack.com/docs/formatting' target='_blank'>https://api.slack.com/docs/formatting</a>."
      },
      "readonly": false,
      "required": true,
      "visible": true
    },
    {
      "label": "Webhook URL",
      "properties": {
        "parameter": "url",
        "fieldType": "url",
        "helptext": "The URL provided by Slack that we send messages to. Go to <a href='https://my.slack.com/services/new/incoming-webhook/' target='_blank'>https://my.slack.com/services/new/incoming-webhook/</a> and add an incoming webhook integration."
      },
      "readonly": false,
      "required": true,
      "visible": true
    }
  ],
  "method": "POST",
  "endpoint": "{field.url}",
  "request": {
    "text": "{field.message}",
    "username": "Kotive",
    "icon_url": "https://pbs.twimg.com/profile_images/560463259598221312/kP3H_2IW.png"
  },
  "response": {
    "success": "ok",
    "error": "Bad token"
  }
}
