{
    "name": "Create a calendar event",
    "description": "Creates a calendar event.",
    "documentation": "https://github.com/basecamp/bcx-api/blob/master/sections/calendar_events.md#create-calendar-event",
    "fields": [
        {
            "label": "Is this calendar event for a project or for a standalone calendar?",
            "properties": {
                "parameter": "calendarType",
                "fieldType": "radio",
                "choices": [
                    {"key": "projects", "value": "Project"},
                    {"key": "calendars", "value": "Calendar"}
                ],
                "default": "projects",
                "classes": "inline",
            },
            "readonly": false,
            "required": true,
            "visible": true
        },
        {
          "label": "Project or Calendar Id",
          "properties": {
            "parameter": "calendarProjectId",
            "fieldType": "text",
            "helptext": "If you indicated that the calendar event belongs to a 'Project' or a 'Calendar', provide the id for that project or calendar."
          },
          "readonly": false,
          "required": true,
          "visible": true
        },
        {
          "label": "Summary",
          "properties": {
            "parameter": "summary",
            "fieldType": "text",
            "helptext": "Summary for what the calendar event is for, e.g. 'Weekly meeting'."
          },
          "readonly": false,
          "required": true,
          "visible": true
        },
        {
          "label": "Description",
          "properties": {
            "parameter": "description",
            "fieldType": "textarea",
            "helptext": "Information about the calendar event, e.g. 'To discuss business'."
          },
          "readonly": false,
          "required": true,
          "visible": true
        },
        {
          "label": "Subscriber's id",
          "properties": {
            "parameter": "subscriberIds",
            "fieldType": "text",
            "helptext": "To subscribe specific people to a calendar event, provide their person ID. Or to subscribe 'all' the people on the project to this calendar event enter the word 'all' in the text box."
          },
          "readonly": false,
          "required": false,
          "visible": true
        },
        {
            "label": "Do you want to subscribe all the people on the project to this calendar event?",
            "properties": {
                "parameter": "subscribers",
                "fieldType": "radio",
                "choices": [
                    {"key": "all", "value": "Yes"},
                    {"key": "", "value": "No"},
                ],
                "default": "",
                "classes": "inline",
            },
            "readonly": false,
            "required": false,
            "visible": true
        },
        {
          "label": "Start date",
          "properties": {
            "parameter": "startsAt",
            "fieldType": "text",
            "helptext": "The start date for the calendar events. YYYY-MM-DD format."
          },
          "readonly": false,
          "required": false,
          "visible": true
        },
        {
          "label": "Remind date",
          "properties": {
            "parameter": "remindAt",
            "fieldType": "text",
            "helptext": "Basecamp will send a reminder email to all subscribers if the 'remind date' is set. This date can't be more than three days before the start date or any time after the start date. YYYY-MM-DD format."
          },
          "readonly": false,
          "required": false,
          "visible": true
        }
    ],
    "method": "POST",
    "endpoint": "/{field.calendarType}/{field.calendarProjectId}/calendar_events.json",
    "request": {
        "summary": "{field.summary}",
        "description": "{field.description}",
        "subscribers": "{field.subscriberIds}",
        "subscribers": "{field.subscribers}",
        "starts_at":"{field.startsAt}",
        "remind_at":"{field.remindAt}"
    },
    "response": {
        "success": "",
        "error": {}
    }
}
