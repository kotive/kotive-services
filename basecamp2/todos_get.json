{
    "name": "Get to-dos",
    "description": "Get to-dos for to-do lists.",
    "documentation": "https://github.com/basecamp/bcx-api/blob/master/sections/todos.md#get-to-dos",
    "fields": [
        {
          "label": "Project Id",
          "properties": {
            "parameter": "projectId",
            "fieldType": "text",
            "helptext": "Provide the project ID you want to see the to-dos for.",
          },
          "readonly": false,
          "required": true,
          "visible": true
        },
        {
          "label": "Todolists Id",
          "properties": {
            "parameter": "todolistsId",
            "fieldType": "text",
            "helptext": "Provide the to-do lists' ID you want to see the to-dos for.",
          },
          "readonly": false,
          "required": true,
          "visible": true
        },
        {
            "label": "Do you want to see all to-dos (completed and remaining), only completed, only remainging or trashed to-dos?",
            "properties": {
                "parameter": "todosStatus",
                "fieldType": "radio",
                "choices": [
                    {"key": "", "value": "All to-dos (completed and remaining)"},
                    {"key": "/completed", "value": "Completed"},
                    {"key": "/remaining", "value": "Remaining"},
                    {"key": "/trashed", "value": "Trashed"}
                ],
                "default": "",
                "classes": "inline",
            },
            "readonly": false,
            "required": true,
            "visible": true
        }
    ],
    "method": "GET",
    "endpoint": "/projects/{field.projectId}/todolists/{field.todolistsId}/todos{field.todosStatus}.json",
    "request": {},
    "response": {
        "success": "",
        "error": ""
    }
}