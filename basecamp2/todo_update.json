{
    "name": "Update a to-do",
    "description": "Update an existing to-do.",
    "documentation": "https://github.com/basecamp/bcx-api/blob/master/sections/todos.md#update-to-do",
    "fields": [
        {
          "label": "Project id",
          "properties": {
            "parameter": "projectId",
            "fieldType": "text",
            "helptext": "ID for the project where you want to update the to-do."
          },
          "readonly": false,
          "required": true,
          "visible": true
        },
        {
          "label": "To-do id",
          "properties": {
            "parameter": "todoId",
            "fieldType": "text",
            "helptext": "ID for the to-do you want to update."
          },
          "readonly": false,
          "required": true,
          "visible": true
        },
        {
            "label": "Content",
            "properties": {
                "parameter": "content",
                "fieldType": "text",
                "helptext": "Content for what the to-do is for, e.g. 'This is my new thing!'."
            },
            "readonly": false,
            "required": true,
            "visible": true
        },
        {
          "label": "Due date",
          "properties": {
            "parameter": "dueAt",
            "fieldType": "text",
            "helptext": "A date when the to-do should be completed, in ISO 8601 format (like '2012-03-27T16:00:00-05:00')."
          },
          "readonly": false,
          "required": false,
          "visible": true
        },
        {
          "label": "ID of person to assign this to-do, to.",
          "properties": {
            "parameter": "assigneeId",
            "fieldType": "text",
            "helptext": "Provide the id of the person that will be assigned to this to-do."
          },
          "readonly": false,
          "required": false,
          "visible": true
        },
        {
            "label": "Is the to-do completed?",
            "properties": {
                "parameter": "completed",
                "fieldType": "radio",
                "choices": [
                    {"key": "true", "value": "Yes"},
                    {"key": "false", "value": "No"}
                ],
                "default": "false"
            },
            "readonly": false,
            "required": false,
            "visible": true
        }
    ],
    "headers": {
      "Authorization": "Bearer {auth.oauth2Token}"
    },
    "method": "PUT",
    "endpoint": "/projects/{field.projectId}/todos/{field.todoId}.json",
    "request": {
        "content": "{field.content}",
        "assignee": {
            "id": "{field.assigneeId}",
            "type": "Person"
        },
        "due_at":"{string_or_null(field.dueAt)}",
        "completed":"{field.completed}"
    },
    "response": {
        "success": "",
        "error": {}
    }
}
