{
    "name": "Create a to-do",
    "description": "Create a new to-do.",
    "documentation": "https://github.com/basecamp/bcx-api/blob/master/sections/todos.md#create-to-do",
    "fields": [
        {
          "label": "Project id",
          "properties": {
            "parameter": "projectId",
            "fieldType": "text",
            "helptext": "ID for the project you want to create the to-do for."
          },
          "readonly": false,
          "required": true,
          "visible": true
        },
        {
            "label": "To-do list id",
            "properties": {
                "parameter": "todoListId",
                "fieldType": "number",
                "helptext": "The ID of the to-do list where under you want the to-do."
            },
            "readonly": false,
            "required": true,
            "visible": true
        },
        {
            "label": "Content",
            "properties": {
                "parameter": "content",
                "fieldType": "text",
                "helptext": "Content for what the to-do is for, e.g. 'This is my new thing!'."
            },
            "readonly": false,
            "required": true,
            "visible": true
        },
        {
          "label": "Due date",
          "properties": {
            "parameter": "dueAt",
            "fieldType": "text",
            "helptext": "A date when the to-do should be completed, in ISO 8601 format (like '2012-03-27T16:00:00-05:00')."
          },
          "readonly": false,
          "required": false,
          "visible": true
        },
        {
          "label": "ID of person to assign this to-do, to.",
          "properties": {
            "parameter": "assigneeId",
            "fieldType": "text",
            "helptext": "Provide the id of the person that will be assigned to this to-do."
          },
          "readonly": false,
          "required": false,
          "visible": true
        },
        {
          "label": "Type of assignee",
          "properties": {
            "parameter": "assigneeType",
            "fieldType": "text",
            "helptext": "A list of people that will be assigned to this to-do. Get info on <a href='https://github.com/basecamp/bc3-api/blob/master/sections/people.md#get-all-people' target='_blank'>how to retrieve people</a>."
          },
          "readonly": false,
          "required": false,
          "visible": true
        },
        {
          "label": "Subscriber's id",
          "properties": {
            "parameter": "subscriberIds",
            "fieldType": "text",
            "helptext": "To notify subscribers about this message, provide their person IDs (seperated by commas)."
          },
          "readonly": false,
          "required": false,
          "visible": true
        },
        {
          "label": "New subscribers",
          "properties": {
            "parameter": "newSubscriberEmails",
            "fieldType": "textarea",
            "helptext": "To 'loop-in' outside email addresses for users without an account, include a new subscriber emails list. Seperate email addresses by commas and no spaces E.g. 'example@example.com,example@example.com'"
          },
          "readonly": false,
          "required": false,
          "visible": true
        }
    ],
    "method": "POST",
    "endpoint": "/projects/{field.projectId}/todolists/{field.todolistId/todos.json",
    "request": {
        "content": "{field.content}",
        "assignee": {
            "id": "{field.assigneeId}",
            "type": "{field.person}"
        },
        "due_at":"{field.dueAt}",
        "subscribers": "{string_to_hash(field.subscriberIds)}",
        "new_subscriber_emails": "{string_to_hash(field.newSubscriberEmails)}"
    },
    "response": {
        "success": "",
        "error": {}
    }
}
