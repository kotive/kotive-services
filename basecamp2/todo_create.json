{
    "name": "Create a to-do",
    "description": "Create a new to-do.",
    "documentation": "https://github.com/basecamp/bcx-api/blob/master/sections/todos.md#create-to-do",
    "fields": [
        {
          "label": "Project id",
          "properties": {
            "parameter": "projectId",
            "fieldType": "text",
            "helptext": "ID for the project you want to create the to-do for."
          },
          "readonly": false,
          "required": true,
          "visible": true
        },
        {
            "label": "To-do list id",
            "properties": {
                "parameter": "todoListId",
                "fieldType": "text",
                "helptext": "The ID of the to-do list where under you want the to-do."
            },
            "readonly": false,
            "required": true,
            "visible": true
        },
        {
            "label": "Content",
            "properties": {
                "parameter": "content",
                "fieldType": "text",
                "helptext": "Content for what the to-do is for, e.g. 'This is my new thing!'."
            },
            "readonly": false,
            "required": true,
            "visible": true
        },
        {
          "label": "Due date",
          "properties": {
            "parameter": "dueAt",
            "fieldType": "text",
            "helptext": "A date when the to-do should be completed, in ISO 8601 format (like '2012-03-27T16:00:00-05:00')."
          },
          "readonly": false,
          "required": false,
          "visible": true
        },
        {
          "label": "ID of person to assign this to-do, to.",
          "properties": {
            "parameter": "assigneeId",
            "fieldType": "text",
            "helptext": "Provide the id of the person that will be assigned to this to-do."
          },
          "readonly": false,
          "required": false,
          "visible": true
        }
    ],
    "headers": {
      "Authorization": "Bearer {auth.oauth2Token}"
    },
    "method": "POST",
    "endpoint": "/projects/{field.projectId}/todolists/{field.todolistId/todos.json",
    "request": {
        "content": "{field.content}",
        "assignee": {
            "id": "{field.assigneeId}",
            "type": "Person"
        },
        "due_at":"{string_or_null(field.dueAt)}"
    },
    "response": {
        "success": "",
        "error": {}
    }
}
