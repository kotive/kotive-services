{
    "name": "Get to-do lists for a projects",
    "description": "Get to-do lists for a specific project.",
    "documentation": "https://github.com/basecamp/bcx-api/blob/master/sections/todolists.md#get-to-do-lists",
    "fields": [
        {
          "label": "Project Id",
          "properties": {
            "parameter": "projectId",
            "fieldType": "text",
            "helptext": "Provide the project ID you want to see the to-do lists for.",
          },
          "readonly": false,
          "required": true,
          "visible": true
        },
        {
            "label": "Do you want to see active, completed or trashed to-do lists for this project?",
            "properties": {
                "parameter": "todolistsStatus",
                "fieldType": "radio",
                "choices": [
                    {"key": "", "value": "Active"},
                    {"key": "/completed", "value": "Completed"},
                    {"key": "/trashed", "value": "Trashed"}
                ],
                "default": "",
                "classes": "inline",
            },
            "readonly": false,
            "required": true,
            "visible": true
        }
    ],
    "method": "GET",
    "endpoint": "/projects/{field.projectId}/todolists{field.todolistsStatus}.json",
    "request": {},
    "response": {
        "success": "",
        "error": ""
    }
}