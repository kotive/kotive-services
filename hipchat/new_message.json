{
    "name": "Send a message",
    "description": "Send a new message using HipChat.",
    "documentation": "https://www.hipchat.com/docs/api/method/rooms/message",
    "fields": [
        {
            "label": "Room id",
            "properties": {
                "parameter": "room_id",
                "fieldType": "text"
            },
            "readonly": false,
            "required": true,
            "visible": true
        },
        {
            "label": "From",
            "properties": {
                "parameter": "from",
                "fieldType": "text"
            },
            "readonly": false,
            "required": true,
            "visible": true
        },
        {
            "label": "Message",
            "properties": {
                "parameter": "message",
                "fieldType": "textarea"
            },
            "readonly": false,
            "required": true,
            "visible": true
        },
        {
            "label": "Message format",
            "properties": {
                "parameter": "message_format",
                "fieldType": "radio",
                "choices": [
                    "html",
                    "text"
                ],
                "default": "html"
            },
            "readonly": false,
            "required": false,
            "visible": true
        },
        {
            "label": "Notify",
            "properties": {
                "parameter": "notify",
                "fieldType": "radio",
                "choices": [
                    "false",
                    "true"
                ],
                "default": "false"
            },
            "readonly": false,
            "required": false,
            "visible": true
        },
        {
            "label": "Color",
            "properties": {
                "parameter": "color",
                "fieldType": "radio",
                "choices": [
                    "yellow",
                    "red",
                    "green",
                    "purple",
                    "gray",
                    "random"
                ],
                "default": "yellow"
            },
            "readonly": false,
            "required": false,
            "visible": true
        }
    ],
    "method": "POST",
    "endpoint": "//rooms/message?format=json&auth_token={settings.hipchat.auth_token}",
    "request": {
        "room_id": "{field.room_id}",
        "from": "{field.from}",
        "message": "{field.message}",
        "message_format": "{field.message_format}",
        "notify": "{field.notify}",
        "color": "{field.color}"
    },
    "response": {
        "success": {
            "status": "sent"
        },
        "error": {}
    }
}
