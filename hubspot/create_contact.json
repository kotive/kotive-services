        "properties": {
        "parameter": "state",
        "fieldType": "text"
      },
      "readonly": false,
      "required": false,
      "visible": true
    },
    {
      "label": "Postal code or Zip",
      "properties": {
        "parameter": "zip",
        "fieldType": "text"
      },
      "readonly": false,
      "required": false,
      "visible": true
    },
    {
      "label": "Website",
      "properties": {
          "parameter": "website",
          "fieldType": "text",
