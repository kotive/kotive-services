{
  "name": "Create a new contact",
  "description": "Create a new contact in HubSpot.",
  "documentation": "http://developers.hubspot.com/docs/methods/contacts/create_contact#tab-1",
  "fields": [
    {
      "label": "Email",
      "properties": {
