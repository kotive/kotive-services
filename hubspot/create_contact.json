      "required": false,
      "visible": true
    },
    {
      "label": "Phone",
      "properties": {
        "parameter": "phone",
        "fieldType": "text",
        "helptext": "Telephone number of the contact."
      },
      "readonly": false,
      "required": false,
      "visible": true
    },
    {
      "label": "Company",
      "properties": {
        "parameter": "company",
        "fieldType": "text",
