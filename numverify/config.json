{
  "name": "Numverify",
  "description": "Validate national and international phone numbers.",
  "auth": {
        "method": "Custom",
        "fields": [
            {
                "label": "API access key",
                "properties": {
                    "parameter": "apiAccessKey",
                    "fieldType": "text"
                },
                "readonly": false,
                "required": true,
                "visible": true
            },
            {
                "label": "http or https",
                "properties": {
                    "parameter": "protocol",
                    "fieldType": "text",
                    "default": "https",
                    "helptext": "Numverify offers 256-bit HTTPS Encryption for all their paid plans. Enter `https` if you use a paid plan, otherwise `http`"
                },
                "readonly": false,
                "required": true,
                "visible": true
            }
        ]
    },
  "domain": "{auth.field.protocol}://apilayer.net/api"
}