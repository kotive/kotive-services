{
    "name": "Create a new campaign",
    "description": "Create a new campaign in Campaign Monitor.",
    "documentation": "https://www.campaignmonitor.com/api/campaigns/#sending_a_draft_campaign",
    "fields": [
        {
            "label": "Campaign id",
            "properties": {
                "parameter": "campaignid",
                "fieldType": "text"
            },
            "readonly": false,
            "required": true,
            "visible": true
        },
        {
            "label": "Confirmation email address",
            "properties": {
                "parameter": "ConfirmationEmail",
                "fieldType": "email"
            },
            "readonly": false,
            "required": true,
            "visible": true
        },
        {
            "label": "Send date",
            "properties": {
                "parameter": "SendDate",
                "fieldType": "date"
            },
            "readonly": false,
            "required": false,
            "visible": true
        }
    ],
    "method": "POST",
    "endpoint": "/campaigns/{field.campaignid}/send.json",
    "request": {
        "ConfirmationEmail": "{field.ConfirmationEmail}",
        "SendDate": "{field.SendDate}"
    },
    "response": {
        "error": {
            "Code": 120,
            "Message": "Invalid OAuth Token"
        }
    }
}
