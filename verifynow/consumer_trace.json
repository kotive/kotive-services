{
  "name": "Consumer Trace (All-in-One)",
  "description": "Comprehensive consumer tracing service. Returns address history, contact details, employment information, and more. 10 credits.",
  "documentation": "https://www.verifynow.co.za/api-docs",
  "fields": [
    {
      "label": "ID Number",
      "properties": {
        "parameter": "idNumber",
        "fieldType": "text",
        "helptext": "The South African ID number of the person to trace (13 digits)"
      },
      "readonly": false,
      "required": true,
      "visible": true
    },
    {
      "label": "First Name",
      "properties": {
        "parameter": "firstName",
        "fieldType": "text",
        "helptext": "First name of the person (optional, improves accuracy)"
      },
      "readonly": false,
      "required": false,
      "visible": true
    },
    {
      "label": "Last Name",
      "properties": {
        "parameter": "lastName",
        "fieldType": "text",
        "helptext": "Last name/surname of the person (optional, improves accuracy)"
      },
      "readonly": false,
      "required": false,
      "visible": true
    }
  ],
  "method": "POST",
  "headers": {
    "Authorization": "Bearer {auth.field.apikey}",
    "Content-Type": "application/json",
    "Accept": "application/json",
    "Idempotency-Key": "{generate_uuid_v4}"
  },
  "endpoint": "/v1/consumer-trace",
  "request": {
    "idNumber": "{field.idNumber}",
    "firstName": "{field.firstName}",
    "lastName": "{field.lastName}"
  },
  "response": {
    "success": {},
    "error": {}
  }
}
