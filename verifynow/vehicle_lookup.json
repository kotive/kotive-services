{
  "name": "Vehicle Lookup",
  "description": "Look up vehicle registration information. Returns owner details, vehicle specifications, and registration status. 4 credits.",
  "documentation": "https://www.verifynow.co.za/api-docs",
  "fields": [
    {
      "label": "Registration Number",
      "properties": {
        "parameter": "registrationNumber",
        "fieldType": "text",
        "helptext": "The vehicle registration number (license plate)"
      },
      "readonly": false,
      "required": true,
      "visible": true
    }
  ],
  "method": "POST",
  "headers": {
    "Authorization": "Bearer {auth.field.apikey}",
    "Content-Type": "application/json",
    "Accept": "application/json",
    "Idempotency-Key": "{generate_uuid_v4}"
  },
  "endpoint": "/v1/vehicle-lookup",
  "request": {
    "registrationNumber": "{field.registrationNumber}"
  },
  "response": {
    "success": {},
    "error": {}
  }
}
