{
  "name": "Face Match (Standard)",
  "description": "Compare two photos for face similarity. Dynamic credits.",
  "documentation": "https://www.verifynow.co.za/api-docs",
  "fields": [
    {
      "label": "Selfie Image (Base64)",
      "properties": {
        "parameter": "selfie_image_base64",
        "fieldType": "textarea",
        "helptext": "Base64-encoded selfie image (max 10MB)"
      },
      "readonly": false,
      "required": true,
      "visible": true
    },
    {
      "label": "Reference Image (Base64)",
      "properties": {
        "parameter": "reference_image_base64",
        "fieldType": "textarea",
        "helptext": "Base64-encoded reference image to compare against (max 10MB)"
      },
      "readonly": false,
      "required": true,
      "visible": true
    },
    {
      "label": "Mode",
      "properties": {
        "parameter": "mode",
        "fieldType": "radio",
        "choices": [
          {"key": "sandbox", "value": "Sandbox (testing)"},
          {"key": "production", "value": "Production"}
        ],
        "default": "sandbox",
        "classes": "inline",
        "helptext": "Use sandbox for testing without using credits"
      },
      "readonly": false,
      "required": true,
      "visible": true
    }
  ],
  "method": "POST",
  "headers": {
    "x-api-key": "{auth.field.apikey}",
    "Content-Type": "application/json",
    "Idempotency-Key": "{generate_uuid_v4}"
  },
  "endpoint": "/facematch",
  "request": {
    "bundle": "facematch_standard",
    "selfie_image_base64": "{field.selfie_image_base64}",
    "reference_image_base64": "{field.reference_image_base64}",
    "mode": "{field.mode}"
  },
  "response": {
    "success": {},
    "error": {}
  }
}
