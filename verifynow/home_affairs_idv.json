{
  "name": "Home Affairs Real-time IDV",
  "description": "Real-time identity verification directly against the South African Department of Home Affairs database. Returns live status. 6 credits.",
  "documentation": "https://www.verifynow.co.za/api-docs",
  "fields": [
    {
      "label": "ID Number",
      "properties": {
        "parameter": "idNumber",
        "fieldType": "text",
        "helptext": "The South African ID number to verify (13 digits)"
      },
      "readonly": false,
      "required": true,
      "visible": true
    },
    {
      "label": "First Name",
      "properties": {
        "parameter": "firstName",
        "fieldType": "text",
        "helptext": "First name to match against Home Affairs records"
      },
      "readonly": false,
      "required": true,
      "visible": true
    },
    {
      "label": "Last Name",
      "properties": {
        "parameter": "lastName",
        "fieldType": "text",
        "helptext": "Last name/surname to match against Home Affairs records"
      },
      "readonly": false,
      "required": true,
      "visible": true
    }
  ],
  "method": "POST",
  "headers": {
    "Authorization": "Bearer {auth.field.apikey}",
    "Content-Type": "application/json",
    "Accept": "application/json",
    "Idempotency-Key": "{generate_uuid_v4}"
  },
  "endpoint": "/v1/home-affairs-idv",
  "request": {
    "idNumber": "{field.idNumber}",
    "firstName": "{field.firstName}",
    "lastName": "{field.lastName}"
  },
  "response": {
    "success": {},
    "error": {}
  }
}
