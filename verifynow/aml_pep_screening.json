{
  "name": "AML/PEP Screening",
  "description": "Screen individuals or companies against global sanctions lists, PEP databases, and crime/adverse media records. Dynamic credits.",
  "documentation": "https://www.verifynow.co.za/api-docs",
  "fields": [
    {
      "label": "Name",
      "properties": {
        "parameter": "name",
        "fieldType": "text",
        "helptext": "Full name or business name to screen"
      },
      "readonly": false,
      "required": true,
      "visible": true
    },
    {
      "label": "Entity Type",
      "properties": {
        "parameter": "entity",
        "fieldType": "radio",
        "choices": [
          {"key": "0", "value": "Person"},
          {"key": "1", "value": "Company"},
          {"key": "2", "value": "Organization"},
          {"key": "3", "value": "Legal Entity"}
        ],
        "default": "0",
        "classes": "inline",
        "helptext": "Type of entity being screened"
      },
      "readonly": false,
      "required": true,
      "visible": true
    },
    {
      "label": "Country",
      "properties": {
        "parameter": "country",
        "fieldType": "text",
        "helptext": "2-letter ISO country code (e.g., za, us, gb)"
      },
      "readonly": false,
      "required": true,
      "visible": true
    },
    {
      "label": "Dataset",
      "properties": {
        "parameter": "dataset",
        "fieldType": "radio",
        "choices": [
          {"key": "all", "value": "All"},
          {"key": "sanctions", "value": "Sanctions only"},
          {"key": "peps", "value": "PEPs only"},
          {"key": "crime", "value": "Crime only"}
        ],
        "default": "all",
        "classes": "inline",
        "helptext": "Search scope for screening"
      },
      "readonly": false,
      "required": true,
      "visible": true
    },
    {
      "label": "Mode",
      "properties": {
        "parameter": "mode",
        "fieldType": "radio",
        "choices": [
          {"key": "sandbox", "value": "Sandbox (testing)"},
          {"key": "production", "value": "Production"}
        ],
        "default": "sandbox",
        "classes": "inline",
        "helptext": "Use sandbox for testing without using credits"
      },
      "readonly": false,
      "required": true,
      "visible": true
    }
  ],
  "method": "POST",
  "headers": {
    "x-api-key": "{auth.field.apikey}",
    "Content-Type": "application/json",
    "Idempotency-Key": "{generate_uuid_v4}"
  },
  "endpoint": "/aml-screening",
  "request": {
    "name": "{field.name}",
    "entity": "{field.entity}",
    "country": "{field.country}",
    "dataset": "{field.dataset}",
    "mode": "{field.mode}"
  },
  "response": {
    "success": {},
    "error": {}
  }
}
