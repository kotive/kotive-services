{
  "name": "AML/PEP Screening",
  "description": "Screen an individual against Anti-Money Laundering (AML) and Politically Exposed Persons (PEP) databases. 5 credits.",
  "documentation": "https://www.verifynow.co.za/api-docs",
  "fields": [
    {
      "label": "First Name",
      "properties": {
        "parameter": "firstName",
        "fieldType": "text",
        "helptext": "First name of the person to screen"
      },
      "readonly": false,
      "required": true,
      "visible": true
    },
    {
      "label": "Last Name",
      "properties": {
        "parameter": "lastName",
        "fieldType": "text",
        "helptext": "Last name/surname of the person to screen"
      },
      "readonly": false,
      "required": true,
      "visible": true
    },
    {
      "label": "ID Number",
      "properties": {
        "parameter": "idNumber",
        "fieldType": "text",
        "helptext": "South African ID number (optional, improves accuracy)"
      },
      "readonly": false,
      "required": false,
      "visible": true
    },
    {
      "label": "Date of Birth",
      "properties": {
        "parameter": "dateOfBirth",
        "fieldType": "date",
        "helptext": "Date of birth (optional, improves accuracy)"
      },
      "readonly": false,
      "required": false,
      "visible": true
    }
  ],
  "method": "POST",
  "headers": {
    "Authorization": "Bearer {auth.field.apikey}",
    "Content-Type": "application/json",
    "Accept": "application/json",
    "Idempotency-Key": "{generate_uuid_v4}"
  },
  "endpoint": "/v1/aml-pep-screening",
  "request": {
    "firstName": "{field.firstName}",
    "lastName": "{field.lastName}",
    "idNumber": "{field.idNumber}",
    "dateOfBirth": "{field.dateOfBirth}"
  },
  "response": {
    "success": {},
    "error": {}
  }
}
