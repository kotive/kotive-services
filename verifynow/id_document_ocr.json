{
  "name": "ID Document OCR",
  "description": "Extract data from ID documents using OCR. Supports ID cards, passports, and driver's licenses. 6 credits.",
  "documentation": "https://www.verifynow.co.za/api-docs",
  "fields": [
    {
      "label": "Front Image (Base64)",
      "properties": {
        "parameter": "front_image_base64",
        "fieldType": "textarea",
        "helptext": "Base64-encoded image of the document front"
      },
      "readonly": false,
      "required": true,
      "visible": true
    },
    {
      "label": "Back Image (Base64)",
      "properties": {
        "parameter": "back_image_base64",
        "fieldType": "textarea",
        "helptext": "Base64-encoded image of the document back (optional)"
      },
      "readonly": false,
      "required": false,
      "visible": true
    },
    {
      "label": "Document Type",
      "properties": {
        "parameter": "document_type",
        "fieldType": "text",
        "helptext": "Hint for document type (optional)"
      },
      "readonly": false,
      "required": false,
      "visible": true
    },
    {
      "label": "Issuing Country",
      "properties": {
        "parameter": "issuing_country",
        "fieldType": "text",
        "helptext": "3-letter ISO country code (optional)"
      },
      "readonly": false,
      "required": false,
      "visible": true
    },
    {
      "label": "Mode",
      "properties": {
        "parameter": "mode",
        "fieldType": "radio",
        "choices": [
          {"key": "sandbox", "value": "Sandbox (testing)"},
          {"key": "production", "value": "Production"}
        ],
        "default": "sandbox",
        "classes": "inline",
        "helptext": "Use sandbox for testing without using credits"
      },
      "readonly": false,
      "required": true,
      "visible": true
    }
  ],
  "method": "POST",
  "headers": {
    "x-api-key": "{auth.field.apikey}",
    "Content-Type": "application/json",
    "Idempotency-Key": "{generate_uuid_v4}"
  },
  "endpoint": "/id-document-verify",
  "request": {
    "bundle": "id_document_verification",
    "front_image_base64": "{field.front_image_base64}",
    "back_image_base64": "{field.back_image_base64}",
    "document_type": "{field.document_type}",
    "issuing_country": "{field.issuing_country}",
    "mode": "{field.mode}"
  },
  "response": {
    "success": {},
    "error": {}
  }
}
